{
  "name": "arbroath",
  "version": "0.0.1",
  "description": "Http Api testing Cli and library. Config and convention driven asynchronous testing",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha \"test/unit/**/*.spec.coffee\" --compilers coffee:coffee-script/register",
    "test:integration": "mocha \"test/integration/**/*.spec.coffee\" --compilers coffee:coffee-script/register"
  },
  "bin": {
    "arbroath": "./cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bapti/arbroath.git"
  },
  "keywords": [
    "http",
    "api",
    "testing",
    "streaming"
  ],
  "author": "Neil Crawford <neil.crawford@gmail.com> (https://github.com/bapti)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bapti/arbroath/issues"
  },
  "homepage": "https://github.com/bapti/arbroath#readme",
  "dependencies": {
    "coffee-script": "^1.10.0",
    "highland": "^2.5.1",
    "request": "^2.67.0"
  },
  "devDependencies": {
    "mocha": "^2.3.4",
    "should": "^8.0.1"
  }
}
